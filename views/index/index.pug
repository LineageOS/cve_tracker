doctype html

link(href='/css/normalize.css', rel='stylesheet')
link(href='/css/skeleton.css', rel='stylesheet')

link(href='/css/style.css', rel='stylesheet')
html(lang="en")
  head
    title= "LineageOS CVE Checklist"
  body
    div.frame.container
      - for (var j = 0; j < kernels.length; j += Math.ceil(kernels.length/3))
        - var last_vendor = "";
        div.four.columns
          - for (var i = j; i < kernels.length && i < j + Math.ceil(kernels.length/3); i++)
            if last_vendor != kernels[i].vendor
              div.header= kernels[i].vendor
                - last_vendor = kernels[i].vendor
            div.kernelrow
              a(href="/?k=" + kernels[i].repo).device= kernels[i].name
              br
